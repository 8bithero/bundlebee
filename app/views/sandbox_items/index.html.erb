
  <h1>Listing sandboxes</h1>

  <table>
    <tr>
      <th>User</th>
      <th>App</th>
      <th></th>
      <th></th>
    </tr>

  <% @sandbox_items.each do |item| %>
    <tr>
      <td><%= item.user_id %></td>
      <td><%= item.app_id %></td>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

